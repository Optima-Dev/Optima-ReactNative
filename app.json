{
  "expo": {
    "name": "Optima",
    "slug": "Optima",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/Main-Logo-blue.png",
    "splash": {
      "image": "./assets/Splash-Logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#2727C4"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "We need access to your microphone for voice control.",
        "NSSpeechRecognitionUsageDescription": "We need access to speech recognition for voice control."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/Main-Logo-blue.png",
        "backgroundColor": "white"
      },
      "permissions": [
        "RECORD_AUDIO",
        "INTERNET",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ],
      "package": "com.ahmed_hatem25.Optima"
    },
    "web": {
      "favicon": "./assets/Main-Logo-blue.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "This app needs access to your camera so you can take pictures and do things like that.",
          "microphonePermission": "This app needs access to your microphone so you can record audio.",
          "recordAudioAndroid": true
        }
      ]
    ],
    "permissions": [
      "audioRecording"
    ],
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "8ba5f0bf-ee7b-4eca-815b-5225ae53624a"
      }
    }
  }
}
